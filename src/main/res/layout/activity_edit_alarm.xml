<?xml version="1.0" encoding="utf-8"?>
<!--
    编辑闹钟界面布局文件 - activity_edit_alarm.xml
    
    功能：
    用于添加新闹钟或编辑现有闹钟，包含所有闹钟配置选项：
    1. 顶部标题栏：取消按钮、标题（"添加闹钟"/"编辑闹钟"）、完成按钮
    2. 时间选择器：两个 NumberPicker（小时和分钟）
    3. 设置项列表（可滚动）：
       - 重复设置（点击弹出对话框选择星期几）
       - 日期选择（点击弹出 DatePickerDialog）
       - 闹钟名称（点击弹出输入对话框）
       - 提醒方式（点击弹出对话框：铃声选择器 + 震动开关）
       - 提醒关闭后删除此闹钟（开关）
       - 稍后提醒（点击跳转到 SnoozeSettingsActivity）
       - 跳过节假日（开关）
       - 稍后提醒报时（开关）
    
    布局结构：
    CoordinatorLayout（根布局）
    ├── AppBarLayout（顶部标题栏）
    │   └── LinearLayout（取消 + 标题 + 完成）
    └── NestedScrollView（可滚动内容区域）
        └── LinearLayout（垂直布局）
            ├── LinearLayout（时间选择器：小时 + 分钟）
            └── LinearLayout（设置项列表，白色背景，用分隔线和间距分隔）
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cancel"
                android:textSize="16sp"
                android:textColor="@color/button_gray"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/edit_alarm"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvDone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/done"
                android:textSize="16sp"
                android:textColor="@color/red_primary"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F5F5F5">

            <!-- 时间选择器区域：使用两个 NumberPicker 分别选择小时和分钟 -->
            <!-- 小时范围：0-23，分钟范围：0-59，显示格式为 "02时" 和 "30分" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="32dp"
                android:background="@color/white">

                <!-- 小时选择器 -->
                <NumberPicker
                    android:id="@+id/npHour"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1" />

                <!-- "时" 单位文字 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时"
                    android:textSize="20sp"
                    android:textColor="#212121"
                    android:layout_marginHorizontal="8dp" />

                <!-- 分钟选择器 -->
                <NumberPicker
                    android:id="@+id/npMinute"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1" />

                <!-- "分" 单位文字 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分"
                    android:textSize="20sp"
                    android:textColor="#212121"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- 设置项列表 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <!-- 重复设置：点击后弹出对话框选择星期几重复 -->
                <!-- tvRepeatValue 显示当前选择的重复设置（"仅一次"、"每天"、"周一 周二"等） -->
                <LinearLayout
                    android:id="@+id/llRepeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/repeat_days"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvRepeatValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="仅一次"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@color/text_secondary" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <!-- 日期 -->
                <LinearLayout
                    android:id="@+id/llDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="日期"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvDateValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="明天"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@color/text_secondary" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/background" />

                <!-- 闹钟名称 -->
                <LinearLayout
                    android:id="@+id/llAlarmName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="闹钟名称"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvAlarmNameValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginEnd="8dp"
                        android:visibility="gone" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@color/text_secondary" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <!-- 提醒方式 -->
                <LinearLayout
                    android:id="@+id/llReminderMethod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="提醒方式"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvReminderMethodValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="响铃及振动"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@color/text_secondary" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/background" />

                <!-- 提醒关闭后删除此闹钟开关：如果开启，在 AlarmRingingActivity 点击"关闭"时会删除此闹钟 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="提醒关闭后删除此闹钟"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchDeleteAfterDismiss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:thumbTint="@color/switch_thumb"
                            android:trackTint="@color/switch_track" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="闹钟响起时点击&quot;关闭&quot;,此闹钟会被删除。"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/background" />

                <!-- 稍后提醒设置：点击后跳转到 SnoozeSettingsActivity -->
                <!-- tvSnoozeValue 显示当前稍后提醒设置（"10分钟,5次" 或 "已禁用"） -->
                <LinearLayout
                    android:id="@+id/llSnooze"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="稍后提醒"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:id="@+id/tvSnoozeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5分钟,5次"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@color/text_secondary" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/background" />

                <!-- 跳过节假日开关：单个闹钟的节假日跳过设置（覆盖全局设置） -->
                <!-- 如果开启，此闹钟在调度时会检查是否为节假日，如果是则跳过 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/skip_holidays"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchSkipHolidays"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:thumbTint="@color/switch_thumb"
                            android:trackTint="@color/switch_track" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="开启后，此闹钟在法定节假日将自动跳过"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/background" />

                <!-- 稍后提醒报时开关：如果开启，在 AlarmRingingActivity 点击"稍后提醒"时会使用 TextToSpeech 播报当前时间 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="稍后提醒报时"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchSnoozeAnnounce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            android:thumbTint="@color/switch_thumb"
                            android:trackTint="@color/switch_track" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="闹钟响铃时,点击稍后提醒进行自动播报时间。"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

