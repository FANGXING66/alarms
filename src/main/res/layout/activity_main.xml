<?xml version="1.0" encoding="utf-8"?>
<!--
    主界面布局文件 - activity_main.xml
    
    功能：
    显示闹钟列表的主界面，包含：
    1. 顶部标题栏：应用名称、"+"添加按钮、"两个圆圈"设置按钮
    2. 闹钟列表：使用 RecyclerView 显示所有闹钟（item_alarm.xml）
    3. 空状态提示：当没有闹钟时显示"暂无闹钟"
    
    布局结构：
    CoordinatorLayout（根布局）
    ├── AppBarLayout（顶部标题栏，白色背景）
    │   └── LinearLayout（水平布局：标题 + 添加按钮 + 设置按钮）
    └── NestedScrollView（可滚动内容区域）
        └── LinearLayout（垂直布局）
            ├── RecyclerView（闹钟列表）
            └── TextView（空状态提示，默认隐藏）
-->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@color/white">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <!-- 添加闹钟按钮：点击后打开 EditAlarmActivity 创建新闹钟 -->
            <ImageView
                android:id="@+id/ivAddAlarm"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_input_add"
                android:tint="@color/orange_primary"
                android:padding="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />

            <!-- 设置按钮：点击后打开 SettingsActivity -->
            <ImageView
                android:id="@+id/ivMore"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_two_circles"
                android:tint="@color/text_secondary"
                android:padding="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 闹钟列表：使用 AlarmAdapter 显示所有闹钟，支持滑动删除 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAlarms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <!-- 空状态提示：当没有闹钟时显示，通过代码控制 visibility -->
            <TextView
                android:id="@+id/tvNoAlarms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_alarms"
                android:textSize="14sp"
                android:textColor="@color/text_disabled"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
