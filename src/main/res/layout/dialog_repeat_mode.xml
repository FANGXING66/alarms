<?xml version="1.0" encoding="utf-8"?>
<!--
    重复设置对话框布局 - dialog_repeat_mode.xml

    提供四种预设模式：
    1. 仅一次
    2. 每天
    3. 法定工作日
    4. 节假日及周末
-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="400dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <RadioGroup
            android:id="@+id/rgRepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbOnce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/repeat_once"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

            <RadioButton
                android:id="@+id/rbEveryday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/repeat_everyday"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

            <RadioButton
                android:id="@+id/rbWorkday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/repeat_workday"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

            <RadioButton
                android:id="@+id/rbHolidayWeekend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/repeat_holiday_weekend"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

        </RadioGroup>

    </LinearLayout>

</ScrollView>


